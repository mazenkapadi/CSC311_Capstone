                    </padding>
                    <opaqueInsets>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </opaqueInsets>
                </VBox>
                <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#BackButton" prefHeight="25.0"
                        prefWidth="70.0" style="-fx-background-color: cadetblue;" text="&lt;--- Back"/>
            </children>
        </VBox>
    </content>
